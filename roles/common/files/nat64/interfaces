# This file describes the network interfaces available on your system
# and how to activate them. For more information, see interfaces(5).

source /etc/network/interfaces.d/*

# The loopback network interface
auto lo
iface lo inet loopback

# The primary network interface
auto ens3
iface ens3 inet static
  address 192.168.122.3
  netmask 255.255.255.0

auto ens4
iface ens4 inet static
  address 163.7.175.252
  netmask 255.255.252.0
  gateway 163.7.175.254
  up ethtool --offload ens4 gro off
  dns-search testing.nznog.cloud
  dns-nameserver 163.7.175.253
iface ens4 inet6 static
  address 2404:138:8069:43e8::3
  netmask 124

auto ens5
iface ens5 inet6 static
  address 2404:138:8069::ffff
  netmask 64
  up ethtool --offload ens5 gro off
