---
version: 2
faucet_configs:
    - '/etc/ryu/faucet/faucet.yaml'
    - '/etc/ryu/faucet/faucet-l2.yaml'
watchers:
    port_stats_poller:
        type: 'port_stats'
        dps:
          - ovs-redcables
          - at-tq4600-1
          - at-x930-1
          - at-x930-2
          - at-x510-1
          - at-x510-2
          - at-x510-3
          - at-x510-4
          - at-x230-1
          - at-x230-2
          - at-x230-3
          - at-x230-4
          - cisco-3850
          - aruba-2930-1
          - aruba-2930-2
          - pica-3780
        interval: 10
        db: 'influx'
    port_state_poller:
        type: 'port_state'
        dps:
          - ovs-redcables
          - at-tq4600-1
          - at-x930-1
          - at-x930-2
          - at-x510-1
          - at-x510-2
          - at-x510-3
          - at-x510-4
          - at-x230-1
          - at-x230-2
          - at-x230-3
          - at-x230-4
          - cisco-3850
          - aruba-2930-1
          - aruba-2930-2
          - pica-3780
        interval: 10
        db: 'influx'
    flow_table_poller:
        type: 'flow_table'
        interval: 60
        dps:
          - ovs-redcables
          - at-tq4600-1
          - at-x930-1
          - at-x930-2
          - at-x510-1
          - at-x510-2
          - at-x510-3
          - at-x510-4
          - at-x230-1
          - at-x230-2
          - at-x230-3
          - at-x230-4
          - cisco-3850
          - aruba-2930-1
          - aruba-2930-2
          - pica-3780
        db: 'influx'
dbs:
    influx:
        type: 'influx'
        influx_db: '{{influx_database}}'
        influx_host: 'localhost'
        influx_port: 8086
        influx_user: '{{influx_username}}'
        influx_pwd: '{{influx_password}}'
        influx_timeout: 10
